<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta name="color-scheme" content="light dark" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        {% block stylesheets %}
        {% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
        {{ pwa() }}
    </head>
    <body>
    <nav>
        <ul>
            <li><a href="{{ path('app_homepage') }}">
                    <strong>Scanner</strong>
                </a>
           </li>
        </ul>
        <ul>
            <li>
{#                <pwa-install></pwa-install>#}

                <twig:PwaInstall>
                    <twig:block name="launch">
                        <button class="btn btn-outline-success">
                            Launch button here...
                        </button>
                    </twig:block>
                    <twig:block name="install">
                        <button class="btn btn-success">
                            Install as PWA
                        </button>
                    </twig:block>
                </twig:PwaInstall>

                online/install button

            </li>
        </ul>
        <ul>
            {% set routes = ['scan','qr','isbn'] %}
            {% if app.environment == 'dev' %}
            {% set routes = routes|merge(['list']) %}
            {% endif %}
            {% if app.user %}
            {% set routes = routes|merge(['logout']) %}
            {% else %}
            {% set routes = routes|merge(['login','register']) %}
            {% endif %}
            {% for route in routes %}
                <li><a href="{{ path('app_' ~ route) }}">{{ route|title }}</a></li>
            {% endfor %}
        </ul>

    </nav>

    <main class="container">
        {% block body %}
        {% endblock %}
    </main>
    </body>
</html>
