    {% set _sc = 'scanner' %}
    <a href="{{ path('app_scan') }}" class="btn">
        <button>
            <i class="bi bi-upc-scan"></i>
            {{ 'scan'|trans }}
        </button>
    </a>
    <hr />
        {% set _sc = 'content-loader' %}
        <div {{ stimulus_controller(_sc, {url }) }}
                {{ stimulus_target() }}
                data-content-loader-url-value="{{ path('app_list') }}"
                data-content-loader-load-scripts-value="true"
                data-content-loader-refresh-interval-value="5000"
        >
            <i class="bi bi-book-half"></i>
        </div>

