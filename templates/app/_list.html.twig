{#            {% endfor %}#}

{#        </ol>#}
{#        {{ barcode(book.isbn, 2, 80, 'black') }}#}
{#        {{ book.createdAt|date('c') }}#}
    </tr>
{% endfor %}
    </tbody>

</table>
