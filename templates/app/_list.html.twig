<table class="table">
    <thead>
    <tr>
        <th>{{ 'langauge'|trans }}</th>
        <th>Titulo</th>
        <th>Paginas</th>
        <th>Autor(es)</th>
    </tr>
    </thead>
    <tbody>

{% for book in books %}
    <tr>
        <td>
            {{ book.info.language|default('~') }}
        </td>
        <td>
            <a href="{{ path('book_show', book.rp) }}">
                {{ book.title }}
                 <code>{{ book.isbn }}</code>
            </a>
            <br />
            <p>{{ book.description }}</p>

        </td>
        <td>
            {{ book.info ? book.info.pageCount|default('?') }} pages
        </td>
        <td>
            <ul>
                {% for author in book.authors %}
                    <li>{{ author.name }}</li>
                {% endfor %}
            </ul>

        </td>
